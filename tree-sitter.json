{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/config.schema.json",
  "grammars": [
    {
      "name": "rpmspec",
      "camelcase": "RPMSpec",
      "title": "RPMSpec",
      "scope": "source.rpmspec",
      "path": "rpmspec",
      "file-types": ["spec"],
      "injection-regex": "^rpmspec$",
      "class-name": "TreeSitterRPMSpec",
      "highlights": "rpmspec/queries/highlights.scm",
      "injections": "rpmspec/queries/injections.scm"
    },
    {
      "name": "rpmbash",
      "camelcase": "RPMBash",
      "title": "RPMBash",
      "scope": "source.rpmbash",
      "path": "rpmbash",
      "injection-regex": "^rpmbash$",
      "class-name": "TreeSitterRPMBash",
      "highlights": [
        "rpmbash/queries/highlights.scm",
        "rpmbash/node_modules/tree-sitter-bash/queries/highlights.scm"
      ],
      "injections": "rpmbash/queries/injections.scm"
    }
  ],
  "metadata": {
    "version": "0.0.1",
    "license": "MIT",
    "description": "RPMSpec grammar for tree-sitter",
    "authors": [
      {
        "name": "Andreas Schneider",
        "email": "asn@cryptomilk.org",
        "url": "https://cryptomilk.org/"
      }
    ],
    "links": {
      "repository": "https://gitlab.com/cryptomilk/tree-sitter-rpmspec"
    }
  },
  "bindings": {
    "c": true,
    "go": true,
    "node": true,
    "python": true,
    "rust": true,
    "swift": true,
    "zig": false
  }
}
